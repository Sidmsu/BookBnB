<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">
        <br /><br />
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation">
            <div class="form-group mb-3">
                <label for="title" class="form-label">Title</label>
                <input 
                    id="title"
                    name="listing[title]" 
                    placeholder="Enter title" 
                    type="text" 
                    class="form-control"
                    required
                />
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Please input a valid Title</div>
            </div>
            <div class="form-group mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea 
                    id="description"
                    name="listing[description]" 
                    placeholder="Enter description"
                    class="form-control"
                    required
                ></textarea>
                <div class="valid-feedback">Description looks good!</div>
                <div class="invalid-feedback">Please give some description</div>
            </div>
            <div class="form-group mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input 
                    id="image"
                    name="listing[image]" 
                    placeholder="Enter image URL/Link" 
                    type="text" 
                    class="form-control"
                    required
                />
                <div class="valid-feedback">Image looks good!</div>
                <div class="invalid-feedback">Invalid Image</div>
            </div>
            <div class="row">
                <div class="form-group mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input 
                        id="price"
                        name="listing[price]" 
                        placeholder="Enter price" 
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">Please input a valid price</div>
                </div>
                <div class="form-group mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input 
                        id="country"
                        name="listing[country]" 
                        placeholder="Enter country" 
                        type="text" 
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">Please input a valid Country</div>
                </div>
            </div>

            
            <div class="form-group mb-3">
                <label for="location" class="form-label">Location</label>
                <input 
                    id="location"
                    name="listing[location]" 
                    placeholder="Enter location" 
                    type="text" 
                    class="form-control"
                    required
                />
                <div class="invalid-feedback">Please input a valid Location</div>
            </div>
            <br/><br/>
            <button class="btn btn-dark add-btn">Add</button>
            <br/><br/>
        </form>
    </div>
</div>

